<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fundo"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
   >

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/icon_art" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="A.R.T"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/icon_demolicao" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="DEMOLIÇÃO"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="121dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/icon_revestimento" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="REVESTIMENTO"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/icon_hidraulica" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="HIDRAULICA"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/linear1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/icon_eletrica" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="ELÉTRICA"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linear1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/um" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="CALCULADORA"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:elevation="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/button11"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_art" />

            <Button
                android:id="@+id/button22"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_demolicao" />

            <Button
                android:id="@+id/button33"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_revestimento" />

            <Button
                android:id="@+id/button44"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_hidraulica" />

            <Button
                android:id="@+id/button55"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_eletrica" />

            <Button
                android:id="@+id/button66"
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="@drawable/um" />

            <Button
                android:id="@+id/button77"
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="@drawable/finish" />


        </LinearLayout>

    </HorizontalScrollView>


    <Button
        android:id="@+id/button8"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/finish" />


</RelativeLayout>